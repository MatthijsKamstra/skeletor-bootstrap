{
	"license": "MIT",
	"name": "skeletor-bootstrap",
	"version": "0.0.1",
	"description": "Quick webstite based upon Bootstrap",
	"private": true,
	"author": "Matthijs Kamstra aka [mck]",
	"scripts": {
		"clean": "rimraf dist/{css/*,js/*,img/*}",
		"autoprefixer": "postcss -u autoprefixer -r dist/css/*",
		"scss": "node-sass --output-style compressed -o dist/css assets/scss",
		"lint": "eslint assets/js || true",
		"lint-scss": "stylelint assets/scss/*.scss --syntax scss || true",
		"uglify": "mkdirp dist/js -p && uglifyjs assets/js/*.js -m -o dist/js/app.js && uglifyjs assets/js/*.js -m -c -o dist/js/app.min.js",
		"imagemin": "imagemin assets/img/* -o dist/img",
		"icons": "svgo -f assets/img/icons -o dist/img/icons && svg-sprite-generate -d dist/img/icons -o dist/img/icons/sprite.svg",
		"serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
		"server:haxe": "cd 'bin' && open http://localhost:2000/ && nekotools server",
		"build:css": "run-s lint-scss scss autoprefixer",
		"build:js": "run-s lint uglify",
		"build:img": "run-s imagemin icons",
		"build:haxe": "haxe build.hxml",
		"build:haxe:all": "haxe build_all.hxml",
		"build:scss": "npm run build:nodescss:compilesourcemap",
		"build:nodescss:compile": "node-sass assets/scss/main.scss bin/public/css/main.css",
		"build:nodescss:compilesourcemap": "node-sass assets/scss/main.scss bin/public/css/main.css --source-map true",
		"build": "run-s build:*",
		"watch:css": "onchange \"assets/scss\" -- run-s build:css",
		"watch:js": "onchange \"assets/js\" -- run-s build:js",
		"watch:img": "onchange \"assets/img\" -- run-s build:img",
		"watch:haxe": "onchange 'src/*.hx' 'src/*/*.hx' 'src/*/*/*.hx' 'src/*/*/*/*.hx' -v -- npm run build:haxe",
		"watch": "run-p serve watch:*",
		"-postinstall": "run-s build watch"
	},
	"devDependencies": {
		"autoprefixer": "^10.0.1",
		"browser-sync": "^2.26.13",
		"eslint": "^7.12.1",
		"eslint-config-standard": "^16.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.2",
		"imagemin-cli": "^6.0.0",
		"mkdirp": "^1.0.4",
		"node-sass": "^4.14.1",
		"npm-run-all": "^4.1.5",
		"onchange": "^7.1.0",
		"postcss-cli": "^8.2.0",
		"rimraf": "^3.0.2",
		"stylelint": "^13.7.2",
		"svg-sprite-generator": "^0.0.7",
		"svgo": "^1.3.2",
		"uglify-js": "^3.11.4"
	}
}
